<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightGray"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="302dp"
        android:layout_height="168dp"
        android:id="@+id/cardView12"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="37dp"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/myWhite">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/conLayout11">

            <ImageView
                android:id="@+id/sWine"
                android:layout_width="56dp"
                android:layout_height="75dp"
                android:layout_marginTop="23dp"
                android:src="@drawable/gold"
                app:layout_constraintBottom_toTopOf="@id/sWine2"
                app:layout_constraintLeft_toLeftOf="@id/conLayout11"
                app:layout_constraintTop_toTopOf="@id/conLayout11" />

            <TextView
                android:id="@+id/sWine2"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/maroon"
                android:text="View more details"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:textColor="@color/myWhite"
                app:layout_constraintBottom_toBottomOf="@id/conLayout11"
                app:layout_constraintLeft_toLeftOf="@id/conLayout11"
                app:layout_constraintRight_toRightOf="@id/conLayout11"/>

            <TextView
                android:id="@+id/sWine3"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Vinest Gold Blanc 750ml"
                android:textColor="@color/maroon"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="68dp"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/conLayout11"
                app:layout_constraintRight_toRightOf="@id/conLayout11"
                />

            <TextView
                android:id="@+id/sWine4"
                android:layout_width="50dp"
                android:layout_height="11dp"
                android:text="*****"
                android:layout_marginTop="8dp"
                android:textColor="@color/yellow"
                app:layout_constraintHorizontal_bias="0.163"
                app:layout_constraintLeft_toRightOf="@id/sWine"
                app:layout_constraintRight_toRightOf="@id/conLayout11"
                app:layout_constraintTop_toBottomOf="@id/sWine3" />

            <TextView
                android:id="@+id/sWine5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$275"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:textColor="@color/maroon"
                app:layout_constraintHorizontal_bias="0.163"
                app:layout_constraintLeft_toRightOf="@id/sWine"
                app:layout_constraintRight_toRightOf="@id/conLayout11"
                app:layout_constraintTop_toBottomOf="@id/sWine4"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>